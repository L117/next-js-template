{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "printWidth": 100,
    "singleQuote": false,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/*.{scss,css}",
            "options": {
                "singleQuote": false,
                "useTabs": false,
                "printWidth": 100
            }
        }
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^fp-ts/",
        "^@modules/(.*)$",
        "^@stores/(.*)$",
        "^@api/(.*)",
        "^@hooks/(.*)$",
        "^@contexts/(.*)$",
        "^@components/(.*)$",
        "^@layouts/(.*)$",
        "^@views/(.*)$",
        "^@pages/(.*)$",
        "^\\.\\/.+(?<!s?css)$",
        "^@styles/(.*)$",
        "^\\./.+\\.s?css$",
        "^@assets/(.*)$",
        "^@mocks/(.*)$",
        "^[./]"
    ]
}
